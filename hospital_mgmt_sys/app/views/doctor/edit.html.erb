
<%= form_for @doctor do |e| %>
	<table align="center" style="border: 2px solid black" cellpadding="5" cellspacing="20">
	<tr>
		<td>Doctor Name  :  </td>
		<td><%= e.text_field :name, data: { :validation => "required validate_max_length length50", :"validation-error-msg" => "This field is required and cannot be longer than 50 characters." } %></td>
	</tr>
	<tr>
		<td>Email</td>
		<td><%= e.text_field :email%></td>
	</tr>
	<tr>
		<td>Phone Number%></td>
		<td><%= e.text_field :phone_no%></td>
	</tr>
	<tr>
		<td>Experience</td>
		<td><%= e.text_field :experience%></td>
	</tr>
	<tr>
		<td>Highest Education</td>
		<td><%= e.text_field :education%></td>
	</tr>
	<tr>
		<td>Speciality</td>
		<td><%= e.text_field :speciality%></td>
	</tr>
	<tr>
		<td></td>
		<td><%= e.submit "update" %></td>
	</tr>
</table>


<% end %>

