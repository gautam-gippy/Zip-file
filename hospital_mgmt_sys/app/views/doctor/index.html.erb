<p id="notice"><%= notice %></p>
<table align="center">
	
	<thead>
		<tr>
			
			<th> Name</th>
			<th> Email</th>
			<th> Phone Number</th>
			<th> Experience</th>
			<th> Education</th>
			<th> Speciality</th>
		</tr>
	</thead>
	<tbody>
		<% @doctors.each do |doctor| %>

		<tr>
			
			<td><%= doctor.name %></td>
			<td><%= doctor.email %></td>
			<td><%= doctor.phone_no%></td>
			<td><%= doctor.experience %></td>
			<td><%= doctor.education %></td>
			<td><%= doctor.speciality %></td>
			
			<td><%= link_to 'Remove', destroy_doctor_path(id: doctor.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<td><%= link_to "Edit", edit_doctor_path(id: doctor.id) %></td>
			
		</tr>
		<% end %>
	</tbody>
</table>